<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/branco"
    android:elevation="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_nome_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Nome"
            android:textColor="#303030"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_editar"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nome_categoria"
            android:layout_marginRight="@dimen/margin_8dp"
            android:layout_toLeftOf="@+id/btn_remover"
            android:background="@color/azul"
            android:drawableLeft="@drawable/ic_create_white_18dp"
            android:minHeight="28dp"
            android:minWidth="60dp"
            android:text="Editar"
            android:textColor="@color/branco"
            android:textSize="12dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_remover"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_nome_categoria"
            android:background="@color/vermelho"
            android:drawableLeft="@drawable/ic_delete_white_18dp"
            android:minHeight="28dp"
            android:minWidth="72dp"
            android:text="Remover"
            android:textColor="@color/branco"
            android:textSize="12dp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

