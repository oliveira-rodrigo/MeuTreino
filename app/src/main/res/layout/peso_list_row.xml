<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/branco"
    android:elevation="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Peso"
            android:textColor="#303030"
            android:textSize="14dp"
            android:layout_margin="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_data_pesagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:text="Data da pesagem: 21/12/2016"
            android:textColor="#303030"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_peso"
            android:layout_margin="10dp"/>

        <FrameLayout
            android:id="@+id/frameSeparador"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_data_pesagem"
            android:layout_margin="10dp"
            android:background="#eee"></FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/frameSeparador">

            <ImageButton
                android:id="@+id/btnRemover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_trash_red_32dp"
                android:background="@android:color/transparent"
                android:layout_margin="5dp"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>

