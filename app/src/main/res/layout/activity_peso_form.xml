<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_categoria_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.meutreino.CategoriaFormActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FFF">

        <TextView
            android:id="@+id/tv_peso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Peso" />

        <EditText
            android:id="@+id/editPeso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_peso"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_form_shape"
            android:hint="Peso"
            android:padding="5dp"
            android:numeric="decimal"/>

        <TextView
            android:id="@+id/tv_data_pesagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editPeso"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Data da pesagem" />

        <EditText
            android:id="@+id/editDtPesagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_data_pesagem"
            android:layout_margin="10dp"
            android:background="@drawable/edittext_form_shape"
            android:hint="Data da pesagem"
            android:inputType="numberSigned"
            android:padding="5dp" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/fab_margin"
        android:background="@color/vermelho"
        android:onClick="cancelar"
        android:tint="#fff"
        app:backgroundTint="@color/vermelho"
        app:fab_colorNormal="@color/vermelho"
        app:srcCompat="@drawable/ic_cancel_black_48dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:background="@color/verde"
        android:onClick="salvar"
        android:tint="#fff"
        app:backgroundTint="@color/verde"
        app:fab_colorNormal="@color/verde"
        app:srcCompat="@drawable/ic_save_black_48dp" />

</android.support.design.widget.CoordinatorLayout>
